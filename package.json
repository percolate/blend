    "@types/lodash.clonedeep": "4.5.6",
    "@types/lodash.isequal": "4.5.5",
    "@types/lodash.template": "4.5.0",
    "@types/lodash.uniq": "4.5.6",
    "@types/micromatch": "3.1.0",
    "@types/mime-types": "2.1.0",
