{
  "name": "@percolate/kona",
  "version": "3.4.5",
  "description": "Percolate CLI",
  "license": "CPAL-1.0",
  "repository": "https://github.com/percolate/blend/tree/master/pkgs/kona",
  "engines": {
    "node": "^12",
    "yarn": "^1.19"
  },
  "bin": {
    "kona": "./bin/kona"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "bin",
    "configs",
    "dist",
    "src"
  ],
  "scripts": {
    "copy-files": "shx rm -rf ./dist/cli/coverage/templates && shx mkdir ./dist/cli/coverage/templates && shx cp -R ./src/cli/coverage/templates/. ./dist/cli/coverage/templates/",
    "build": "tsc --build tsconfig.build.json && yarn copy-files",
    "watch": "tsc --build tsconfig.json --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@commitlint/config-conventional": "12.1.1",
    "@commitlint/format": "12.1.1",
    "@commitlint/lint": "12.1.1",
    "@commitlint/load": "12.1.1",
    "@percolate/cli-utils": "0.1.11",
    "commitizen": "4.2.4",
    "fast-glob": "3.2.5",
    "find-up": "4.1.0",
    "husky": "3.0.9",
    "jest": "26.6.3",
    "jest-junit": "10.0.0",
    "jest-watch-typeahead": "0.5.0",
    "lcov-parse": "1.0.0",
    "lodash.clonedeep": "4.5.0",
    "lodash.isequal": "4.5.0",
    "lodash.template": "4.5.0",
    "lodash.uniq": "4.5.0",
    "micromatch": "4.0.2",
    "p-map": "4.0.0",
    "parse-diff": "0.7.1",
    "yargs": "16.2.0",
    "yarn-deduplicate": "1.1.1"
  },
  "peerDependencies": {
    "eslint": ">=6.0.1",
    "prettier": ">=1.18.2",
    "typescript": ">=3.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
